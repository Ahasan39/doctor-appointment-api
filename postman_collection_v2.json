          }
        }
      ],
      "description": "Blog management endpoints (Admin only)"
    },
    {
      "name": "Doctors (Admin)",
      "item": [
        {
          "name": "Get All Doctors",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{admin_token}}"
              }
            ],
            "url": {
              "raw": "{{base_url}}/v1/admin/doctors",
              "host": ["{{base_url}}"],
              "path": ["v1", "admin", "doctors"]
            },
            "description": "Get all doctors"
          }
        },
        {
          "name": "Create Doctor",
          "request": {
            "method": "POST",
