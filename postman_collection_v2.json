              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Dr. John Smith\",\n  \"email\": \"dr.smith@example.com\",\n  \"password\": \"password123\",\n  \"role\": \"doctor\",\n  \"specialization\": \"Cardiology\",\n  \"license_number\": \"LIC123456\",\n  \"years_of_experience\": 15,\n  \"consultation_fee\": 150.00,\n  \"bio\": \"Experienced cardiologist\",\n  \"is_active\": true\n}"
            },
            "url": {
              "raw": "{{base_url}}/v1/admin/doctors",
